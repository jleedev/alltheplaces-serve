{
  "version": 8,
  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",
  "sources": {
    "alltheplaces": {
      "url": "https://alltheplaces-cergsmzmza-uc.a.run.app/services/output",
      "type": "vector"
    },
    "raster-tiles": {
      "type": "raster",
      "tiles": [
        "https://cartodb-basemaps-a.global.ssl.fastly.net/light_all/{z}/{x}/{y}.png",
        "https://cartodb-basemaps-b.global.ssl.fastly.net/light_all/{z}/{x}/{y}.png",
        "https://cartodb-basemaps-c.global.ssl.fastly.net/light_all/{z}/{x}/{y}.png",
        "https://cartodb-basemaps-d.global.ssl.fastly.net/light_all/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "Map tiles by Carto, under CC BY 3.0. Data by OpenStreetMap, under ODbL."
    }
  },
  "layers": [
    {
      "id": "tiles",
      "type": "raster",
      "source": "raster-tiles"
    },
    {
      "id": "output",
      "type": "circle",
      "source": "alltheplaces",
      "source-layer": "output",
      "paint": {
        "circle-radius": [
          "interpolate",
          ["exponential", 2],
          ["zoom"],
          10,
          [
            "max",
            [
              "min",
              [
                "*",
                [
                  "number",
                  [
                    "get",
                    "sqrt_point_count"
                  ],
                  1
                ],
                6
              ],
              15
            ],
            6
          ],
          22,
          50
        ],
        "circle-color": [
          "case",
          [
            "boolean",
            [
              "get",
              "clustered"
            ],
            false
          ],
          "rgba(128,0,255,0.3)",
          "rgba(255,128,0,0.3)"
        ]
      }
    },
    {
      "id": "output-text",
      "type": "symbol",
      "source": "alltheplaces",
      "source-layer": "output",
      "minzoom": 10,
      "layout": {
        "text-field": ["get", "@spider"],
        "text-font": ["Metropolis Regular"],
        "text-size": 10
      }
    }
  ]
}
